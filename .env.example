# Database Configuration
POSTGRES_USER=terra_user
POSTGRES_PASSWORD=change_this_password
POSTGRES_DB=terra_mystica
DATABASE_URL=postgresql://terra_user:change_this_password@postgres:5432/terra_mystica

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# OpenSearch Configuration
OPENSEARCH_HOST=opensearch
OPENSEARCH_PORT=9200
OPENSEARCH_USERNAME=admin
OPENSEARCH_PASSWORD=admin

# AWS Configuration
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_REGION=us-west-2
S3_BUCKET=terra-mystica-images

# JWT Configuration
JWT_SECRET_KEY=your_jwt_secret_key_here_make_it_long_and_random
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# API Configuration
API_V1_STR=/api/v1
PROJECT_NAME=Terra Mystica
BACKEND_CORS_ORIGINS=["http://localhost:3000","https://localhost:3000"]

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_MAPBOX_TOKEN=your_mapbox_token_here

# ML Configuration
GEOCL IP_MODEL_PATH=/app/models/geocl ip
MODEL_CACHE_SIZE=1
ENABLE_GPU=true
CUDA_VISIBLE_DEVICES=0

# Development Configuration
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Docker Configuration
COMPOSE_PROJECT_NAME=terra-mystica